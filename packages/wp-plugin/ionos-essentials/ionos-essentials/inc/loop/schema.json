{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/wordpress-instance.schema.json",
  "title": "Ionos Loop Schema",
  "type": "object",
  "properties": {
    "hosting": {
      "type": "object",
      "properties": {
        "locale": { "type": "string" },
        "blog_public": { "type": "boolean" },
        "market": { "type": "string" },
        "tenant": { "type": "string" },
        "core_version": { "type": "string" },
        "php_version": { "type": "string" },
        "extendify": { "type": "boolean" },
        "instance_created": { "type": "integer" }
      },
      "required": [
        "locale",
        "blog_public",
        "market",
        "tenant",
        "core_version",
        "php_version",
        "instance_created"
      ]
    },
    "wordpress": {
      "type": "object"
    },
    "events": {
      "type": "object"
    },
    "clicks": {
      "type": "object"
    },
    "essentials": {
      "type": "object"
    }
  },
  "required": ["hosting", "wordpress", "essentials"]
}
